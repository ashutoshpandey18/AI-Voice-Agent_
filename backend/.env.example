# ========================================
# Backend Environment Variables
# ========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control
# ========================================

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGO_URI=mongodb://localhost:27017/voice-agent
# For MongoDB Atlas (cloud):
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/voice-agent?retryWrites=true&w=majority

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# External API Keys
# Get your free API key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-use-long-random-string
JWT_EXPIRES_IN=24h

# Admin Seeding (set to 'true' only when you want to create initial admin account)
# See SECURITY.md for details
ALLOW_SEED=false

# Session Configuration (optional)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Rate Limiting (optional - defaults are set in code)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# Logging Level (optional)
LOG_LEVEL=info
